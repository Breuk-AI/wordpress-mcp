{
  "dxt_version": "0.1",
  "name": "wordpress-mcp",
  "version": "1.2.0",
  "description": "Control WordPress through Claude - manage content, edit templates, handle WooCommerce",
  "author": {
    "name": "Breuk & Claude"
  },
  "server": {
    "type": "python",
    "entry_point": "mcp-server/server.py",
    "mcp_config": {
      "command": "python",
      "args": ["${__dirname}/mcp-server/server.py"],
      "env": {
        "WP_SITE_URL": "${config.site_url}",
        "WP_USERNAME": "${config.username}",
        "WP_APP_PASSWORD": "${config.app_password}"
      }
    }
  },
  "user_config": {
    "site_url": {
      "title": "Website URL",
      "description": "WordPress Site URL",
      "type": "string",
      "required": true,
      "default": "https://your-site.com"
    },
    "username": {
      "title": "Username",
      "description": "WordPress Username",
      "type": "string",
      "required": true,
      "default": "admin"
    },
    "app_password": {
      "title": "Application Password",
      "description": "WordPress Application Password (xxxx xxxx xxxx xxxx xxxx xxxx)",
      "type": "string",
      "required": true,
      "sensitive": true,
      "default": ""
    }
  }
}
