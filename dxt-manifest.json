{
  "dxt_version": "0.1.0",
  "name": "wordpress-mcp",
  "display_name": "WordPress MCP",
  "version": "1.2.0",
  "description": "Control WordPress through Claude - manage content, edit templates, handle WooCommerce",
  "author": {
    "name": "Breuk & Claude",
    "email": "extrareality22@gmail.com",
    "url": "https://github.com/Breuk-AI"
  },
  "homepage": "https://github.com/Breuk-AI/wordpress-mcp",
  "repository": "https://github.com/Breuk-AI/wordpress-mcp",
  "license": "MIT",
  "categories": ["cms", "wordpress", "woocommerce", "content-management"],
  "keywords": [
    "wordpress",
    "woocommerce", 
    "cms",
    "content-management",
    "blog",
    "ecommerce"
  ],
  "requirements": {
    "claude_desktop": ">=0.1.0"
  },
  "mcp": {
    "type": "python",
    "runtime": {
      "python": ">=3.9"
    },
    "entry_point": "mcp-server/server.py",
    "install": {
      "requirements": "mcp-server/requirements.txt"
    }
  },
  "configuration": {
    "type": "environment",
    "variables": [
      {
        "name": "WP_SITE_URL",
        "type": "string",
        "description": "Your WordPress site URL",
        "required": true,
        "placeholder": "https://your-site.com"
      },
      {
        "name": "WP_USERNAME",
        "type": "string",
        "description": "WordPress username",
        "required": true,
        "placeholder": "admin"
      },
      {
        "name": "WP_APP_PASSWORD",
        "type": "password",
        "description": "WordPress Application Password",
        "required": true,
        "placeholder": "xxxx xxxx xxxx xxxx xxxx xxxx"
      }
    ]
  }
}
